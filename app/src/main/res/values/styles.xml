<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.GameButton">
        <item name="android:background">@drawable/game_button</item>
        <item name="android:onClick">gameButtonClick</item>
    </style>

    <style name="AppTheme.HighScore">
        <item name="android:background">@drawable/ic_highscore</item>
    </style>

    <style name="AppTheme.InputText">
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#ffababab</item>
        <item name="android:textColorHint">#ffababab</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/input_text</item>


    </style>


    <style name="AppTheme.Button">
        <item name="android:background">@drawable/normal_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:minHeight">32dp</item>
    </style>

</resources>